/* pages/bookContent/bookContent.wxss */
page{
    background: #efefef;
    
}
view{
    display: inline-block;
    font-size: 14px;
    line-height: 1.7;
}
text{
    width: 100%;
}

#page{
    width: 100%;
}
.start{
    margin:40rpx 0 0 35%;
    padding: 25rpx;
    background: #ff6347;
    font-size: 14px;
    border-radius: 10px;
    border-bottom-right-radius: 0px;
    color: #fff;
}

.content{
    position: relative;
    left: -750rpx;
    margin: 30rpx 25% 0 20rpx ;
    padding: 25rpx;
    color: #000;
    border-radius: 10px;
    border-bottom-left-radius: 0px;
    background: #fff;
}

.select{
    float: right;
    margin:30rpx 20rpx 0 50%;
    padding: 25rpx;
    background: #ff6347;
    font-size: 14px;
    border-radius: 10px;
    border-bottom-right-radius: 0px;
    color: #fff;
    opacity: 0;
}

.content_img{
    position: relative;
    left: -750rpx;
    margin: 30rpx 20rpx 0 20rpx;
    width: 70%;
    height: 350rpx;
    border-radius: 10px;
    border-bottom-left-radius: 0px;
}

video{
    margin: 30rpx 20rpx 0 20rpx;
    width: 95%;
}

.end{
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 1;
    margin-top: 40rpx;
}

.end .top{
    font-size: 20px;
    font-weight: bold;
    color: #aaa;
}

.end .bottom{
    color: #fff;
    margin: 40rpx 0;
}

.end .bottom .zan{
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background: #ff5151;
    margin-right: 40rpx;
    border-radius: 5px;
    font-size: 13px;
}

.end .bottom image{
    margin-right:10rpx;
    position: relative;
    top: 5rpx;
    width: 30rpx;
    height: 30rpx;
}

.end .bottom .add{
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background: #60bb80;
    border-radius: 5px;
    font-size: 13px;
}

.share{
    display: inline-block;
    position: fixed;
    font-size: 12px;
    margin: 0;
    padding: 0;
    background: #ff5151;
    left: 10px;
    top: 10px;
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #fff;
    border-radius: 50%;
}
