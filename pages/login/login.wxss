/* pages/login/login.wxss */
.login{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.login .logo{
    width: 300rpx;
    height: 300rpx;
    margin: 100rpx 0 50rpx;
}

.login .logo image{
    position: relative;
    width: 300rpx;
    height: 300rpx;
}

.login .content{
    border-top: 1px solid #aaa;
    width: 80%;
    padding: 50rpx 0;
    font-size: 20px;
}

.login .content text{
    padding-top: 30rpx;
    display: block;
    font-size: 14px;
    color: #aaa;
}

.login .button{
    margin-top: 50rpx;
    width: 50%;
}

