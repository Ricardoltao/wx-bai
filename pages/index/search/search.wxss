/* pages/index/search/search.wxss */

.search {
    width: 590rpx;
    height: 60rpx;
    background: #f5f5f5;
    border-radius: 10px;
    display: flex;
    align-items: center;
    margin: 10px 0 0 10px;
}

.search image {
    width: 28rpx;
    height: 32rpx;
    margin-left: 10px;
    padding-right: 10px;
    border-right: 1px solid #aaa;
}

.search input {
    margin-left: 5px;
    width: 75%;
    font-size: 13px;
}

.search button {
    width: 100rpx;
    height: 60rpx;
    font-size: 12px;
    padding: 0;
    border-radius: 10px;
    left: 120rpx;
    background-color: #75d6a7;
}

/* 搜索历史及热门搜索 */
.history {
    border-top: 1px solid #959595;
    margin-top: 20px;
    font-size: 14px;
}

.history .title,
.hot_search .title {
    font-weight: bold;
    margin: 10px 30px;
    display: flex;
    justify-content: space-between;
}

.history .title .right {
    font-weight: 10px;
    font-weight: normal;
    text-decoration: underline;

}

.history .his_con {
    display: flex;
    justify-content: space-between;
    margin: 10px 35px;
}

.history .his_con .delete {
    font-size: 15px;
}

.hot_search {
    border-top: 1px solid #959595;
    margin-top: 20px;
    font-size: 14px;
}

.hot_search .exchange {
    color: #71ecb9;
}

.hot_search .exchange image {
    float: right;
    margin-left: 10rpx;
    width: 36rpx;
    height: 36rpx;
}

.hot_search .hot_con {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    margin: 20rpx 70rpx;
}

.hot_search .hot_con .tag {
    width: auto;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 5px;
    display: block;
    padding: 0 20rpx;
    background: #eee;
    margin: 15rpx;
}

.search_con {
    position: absolute;
    top: 130rpx;
    width: 100%;
    height: 100%;
    background: #fff;
}

.search_con .list {
    float: left;
}


.search_con .list_content {
    margin: 30rpx 0 0 50rpx;
    width: 300rpx;
    height: 450rpx;
    position: relative;
}

.search_con .list_content .l_con {
    position: absolute;
    width: 100%;
    height: 100%;
}

.search_con .list_content .name {
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: center;
    font-size: 12px;
    color: #fff;
    background: #000;
    opacity: 0.7;
}