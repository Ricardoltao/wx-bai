/**index.wxss**/
/* 登录界面 */
.login{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.login .logo{
  width: 250rpx;
  height: 250rpx;
  background: pink;
  margin: 100rpx 0 50rpx;
}

.login .content{
  border-top: 1px solid #aaa;
  width: 80%;
  padding: 50rpx 0;
  font-size: 20px;
}

.login .content text{
  padding-top: 30rpx;
  display: block;
  font-size: 14px;
  color: #aaa;
}

.login .button{
  margin-top: 50rpx;
  width: 50%;
}


/* 顶部定位搜索 */
.top_contain{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.position{
  width: 165rpx;
  height: 48rpx;
  border: 1px solid #aaa;
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.position image{
  width: 25rpx;
  height: 32rpx;
}

.none{
  font-size: 10px;
  color: #a32b2b;
}

.search{
  width: 395rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 10px;
  display: flex;
  align-items: center;
}

.search image{
  width: 28rpx;
  height: 32rpx;
  margin-left:10px;
  padding-right: 10px;
  border-right: 1px solid #aaa;
}

.search input{
  margin-left: 5px;
  width: 75%;
  font-size: 15px;
}

.info{
  display: block;
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  overflow: hidden;
}

/* 轮播图 */
.banner swiper{
  display: block;
  width: 690rpx;
  height: 350rpx;
  margin: 10px auto;
  box-shadow: 0px 0px 10px 3px #aaa;
}

.banner image{
  width: 100%;
  height: 100%;
}


/* 古今中外 */
.top_list{
  position: relative;
}

.top_list .left,.top_list .right{
  position: absolute;
  top: -20px;
  width: 320rpx;
  height: 200rpx;
}

.top_list .left{
  left: 20px;
}

.top_list .right{
  right: 20px;
}

.top_list .left image,.top_list .right image{
  width: 100%;
  height: 100%;
}

.top_list .text{
  position: absolute;
  top: 0;
  left: 5px;
}

.top_list text{
  display: block;
  width: 100%;
  color: #fff;
}

.top_list .small{
  font-size: 12px;
}

.top_list text .small{
  font-size: 12px;
}

/* 精品推荐 */
.boutique{
  margin-top: 200rpx;
}

.boutique .title{
  padding: 5px 0 5px 20px;
  font-size: 15px;
  color: #1cac66;
}

.boutique .list{
  border-top: 1px solid #aaa;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.boutique .list_content{
  margin: 20rpx 0 0 38rpx ;
  width: 200rpx;
  height: 245rpx;
  position: relative;
}

.boutique .list_content .l_con{
  position:absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.boutique .list_content .name{
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: center;
  font-size: 12px;
  color: #fff;
  background: #000;
  opacity: 0.7;
}

.boutique .list_content .zan{
  background: #ff5151;
  width: 65rpx;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  font-size: 20rpx;
  border-radius: 50%;
  color: #fff;
  position: absolute;
  left: 35%;
  top: 5%;
  z-index: 99;
  display: none;
}

.boutique .list_content .addBook{
  background: #60bb80;
  width: 65rpx;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  font-size: 16rpx;
  border-radius: 50%;
  color: #fff;
  position: absolute;
  left: 35%;
  top: 50%;
  z-index: 99;
  display: none;
}

.boutique .list_content .shade{
  background: #000;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 0;
  opacity: 0;
}