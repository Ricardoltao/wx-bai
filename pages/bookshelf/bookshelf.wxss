/* pages/bookshelf/bookshelf.wxss */
.top_content {
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.top_content .status {
    width: 90rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #6edda7;
    font-size: 13px;
    text-align: center;
    border-radius: 2px;
    position: relative;
}

.top_content .management{
    color: #fff;
    margin: 0 15rpx;
}

.top_content .delete_{
    width: 90rpx;
    height: 50rpx;
}

.top_content .delete{
    color: #fff;
    background: #c12026;
}

.top_content .status em {
    color: #fff;
    padding-right: 2px;
}

.top_content .status_click{
    position: absolute;
    width: 100%;
    height: 0;
    z-index:2;
    overflow: hidden;
    animation-fill-mode: forwards;
}

.top_content .status_click view{
    border-top: 1px solid #e7e7e7;
    width: 100%;
    height: 50rpx;
    background: #6edda7;
    color: #fff;
}

.show{
    display: block;
}

.hide{
    display: none;
}

.open{
    animation:slidedown 1s ;
    -webkit-animation:slidedown 1s ;
}

@keyframes slidedown{
    from{
        height: 0;
    }
    to{
        height: 100rpx;
    }
}


.top_content .search {
    width: 400rpx;
    height: 60rpx;
    background: #f5f5f5;
    border-radius: 10px;
    display: flex;
    align-items: center;
    margin-left: 10px;
}

.top_content .search image {
    width: 28rpx;
    height: 32rpx;
    margin-left: 10px;
    padding-right: 10px;
    border-right: 1px solid #aaa;
}

.top_content .search input {
    margin-left: 5px;
    width: 75%;
    font-size: 13px;
}

.mybook {
    border-top: 1px solid #d2d2d2;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}


.mybook .mb_list {
    margin: 40rpx 10rpx 0 35rpx;
    width: 200rpx;
    height: 245rpx;
    position: relative;
}

.mybook .mb_list .l_con {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.mybook .mb_list .click{
    position: absolute;
    width: 100%;
    height: 100%;
}

.mybook .mb_list .name {
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: center;
    font-size: 12px;
    color: #fff;
    background: #000;
    opacity: 0.7;
}

.mybook .mb_list .complete{
    position: absolute;
    top: -50rpx;
    right: -50rpx;
    width: 160rpx;
    height: 130rpx;
}

.mybook .mb_list .checked{
    width: 70rpx;
    height: 70rpx;
    position: relative;
}

.mybook .mb_list .checked image{
    position: absolute;
    top: 0;
    left:0;
    width: 70rpx;
    height: 70rpx;
    z-index: 999;
}

.mybook .mb_list .shade{
    background: #000;
    width: 100%;
    height: 100%;
    position: absolute;
    opacity: 0.5;
    z-index: 0;
}