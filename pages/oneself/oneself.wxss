/* pages/oneself/oneself.wxss */
.user{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 40px;
    height: 240rpx;
}

.user .avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.user .name{
    font-size: 17px;
}

.function{
    margin-top: 50px;
    display: flex;
    flex-direction: column;
    font-size: 14px;
}

.function .topline{
    border-top: 1px solid #aaa;
    height: 120rpx;
    display: flex;
    align-items: center;
    padding: 0 20px;
}

.function .topline .icon{
    width: 80rpx;
    height: 80rpx;
    margin-right: 10px;
}

.function .topline .right{
    margin-left: 400rpx;
    font-size: 20px;
}





