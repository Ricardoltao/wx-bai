/* pages/oneself/record/record.wxss */
.record {
    margin-top: 40rpx;
}

.record .time {
    font-size: 14px;
    padding-left: 40rpx;
    margin: 40rpx 0 0 0;
    width: 40%;
    border-bottom: 1px solid #aaa;
}

.record .record_content {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.record .record_list {
    margin: 30rpx 10rpx 0 35rpx;
    width: 200rpx;
    height: 245rpx;
    position: relative;
    
}

.record .record_list .l_con {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.record .record_list .name {
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: center;
    font-size: 12px;
    color: #fff;
    background: #000;
    opacity: 0.7;
}


.record .Zan{
    position: fixed;
    right: 20rpx;
    top: 20rpx;
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 14px;
    color: #fff;
    text-align: center;
    background: #6edda7;
    border-radius: 7px;
}

.record .cancel{
    position: fixed;
    right: 200rpx;
    top: 20rpx;
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 14px;
    color: #fff;
    text-align: center;
    background: #c12026;
    border-radius: 7px;
    opacity: 0;
}

.record .checked{
    width: 70rpx;
    height: 70rpx;
    position: relative;
}

.record .checked image{
    position: absolute;
    top: 0;
    left:0;
    width: 70rpx;
    height: 70rpx;
    z-index: 999;
}

.record .shade{
    background: #000;
    width: 100%;
    height: 100%;
    position: absolute;
    opacity: 0.5;
    z-index: 0;
}

.record .click{
    position: absolute;
    width: 100%;
    height: 100%;
}
